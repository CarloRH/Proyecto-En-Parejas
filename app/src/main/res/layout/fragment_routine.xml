<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp">

    <TextView
        android:id="@+id/routineTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rutinas"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/routineSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Selecciona un grupo muscular para ver ejercicios"
        android:textColor="@color/text_primary_dark"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/routineTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/muscleButtonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/routineSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Pecho -> BÍCEPS -->
        <Button
            android:id="@+id/btnChest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BÍCEPS"
            android:textStyle="bold"
            android:textColor="@color/text_on_primary"
            android:backgroundTint="@color/primary"
            android:layout_marginBottom="8dp"/>

        <!-- Espalda -> TRÍCEPS -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRÍCEPS"
            android:textStyle="bold"
            android:textColor="@color/text_on_primary"
            android:backgroundTint="@color/primary"
            android:layout_marginBottom="8dp"/>

        <!-- Piernas -> ESPALDA -->
        <Button
            android:id="@+id/btnLegs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ESPALDA"
            android:textStyle="bold"
            android:textColor="@color/text_on_primary"
            android:backgroundTint="@color/primary"
            android:layout_marginBottom="8dp"/>

        <!-- Hombros -> PECHO -->
        <Button
            android:id="@+id/btnShoulders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PECHO"
            android:textStyle="bold"
            android:textColor="@color/text_on_primary"
            android:backgroundTint="@color/primary"
            android:layout_marginBottom="8dp"/>

        <!-- Bíceps -> ANTEBRAZOS -->
        <Button
            android:id="@+id/btnBiceps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ANTEBRAZOS"
            android:textStyle="bold"
            android:textColor="@color/text_on_primary"
            android:backgroundTint="@color/primary"
            android:layout_marginBottom="8dp"/>

        <!-- Tríceps -> ABDOMEN -->
        <Button
            android:id="@+id/btnTriceps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABDOMEN"
            android:textStyle="bold"
            android:textColor="@color/text_on_primary"
            android:backgroundTint="@color/primary"
            android:layout_marginBottom="8dp"/>

        <!-- Antebrazos -> PIERNAS -->
        <Button
            android:id="@+id/btnForearms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PIERNAS"
            android:textStyle="bold"
            android:textColor="@color/text_on_primary"
            android:backgroundTint="@color/primary"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
